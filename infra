version: '3.8'
services:
  db:
    image: postgres:14
    environment:
      POSTGRES_USER: ${DB_USER}
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_DB: ${DB_NAME}
    volumes:
      - pgdata:/var/lib/postgresql/data
      - ./db-init:/docker-entrypoint-initdb.d:ro   # run .sql/.sh once on first start
    networks:
      - appnet

  backend:
    image: myorg/backend:latest   # built by Jenkins; tags can be changed to use BUILD_NUMBER
    depends_on:
      - db
    environment:
      SPRING_DATASOURCE_URL: jdbc:postgresql://db:5432/${DB_NAME}
      SPRING_DATASOURCE_USERNAME: ${DB_USER}
      SPRING_DATASOURCE_PASSWORD: ${DB_PASSWORD}
    ports:
      - "8080:8080"
    networks:
      - appnet

  frontend:
    image: myorg/frontend:latest
    depends_on:
      - backend
    ports:
      - "80:80"
    networks:
      - appnet

volumes:
  pgdata:

networks:
  appnet:
